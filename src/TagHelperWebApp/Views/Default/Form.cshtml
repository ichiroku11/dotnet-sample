@model FormCommand
@{
	Layout = null;
}
@functions {
	private IEnumerable<SelectListItem> GetSelectListItems() {
		yield return new SelectListItem { Text = "選択してください", Value = "" };
		yield return new SelectListItem { Text = "A", Value = "1" };
		yield return new SelectListItem { Text = "B", Value = "2" };
		yield return new SelectListItem { Text = "C", Value = "3" };
	}
}
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Form</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col">
				<h4>Form</h4>
				<form asp-action="Form" method="post">
					<div class="form-group">
						<label asp-for="Text">@nameof(Model.Text)</label>
						<input asp-for="Text" class="form-control" type="text" />
					</div>
					<div class="form-group">
						<div class="form-check form-check-inline">
							<input asp-for="CheckBox" class="form-check-input" type="checkbox" />
							<label asp-for="CheckBox" class="form-check-label">@nameof(Model.CheckBox)</label>
						</div>
					</div>
					<div class="form-group">
						<div class="form-check form-check-inline">
							<input asp-for="Radio" class="form-check-input" id="radio1" type="radio" value="1" />
							<label class="form-check-label" for="radio1">@nameof(Model.Radio):1</label>
						</div>
						<div class="form-check form-check-inline">
							<input asp-for="Radio" class="form-check-input" id="radio2" type="radio" value="2" />
							<label class="form-check-label" for="radio2">@nameof(Model.Radio):2</label>
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Select">@nameof(Model.Select)</label>
						<select asp-for="Select" asp-items="GetSelectListItems()" class="form-control"></select>
					</div>
					<div class="form-group">
						<label asp-for="MultilineText">@nameof(Model.MultilineText)</label>
						<textarea asp-for="MultilineText" class="form-control"></textarea>
					</div>
					<button class="btn btn-primary">Save</button>
				</form>
			</div>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
